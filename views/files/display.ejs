<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Display</title>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid black;
        text-align: left;
        padding: 8px;
        text-align: center;
      }
      .button {
        background-color: #4478e7;
        border: none;
        color: white;
        padding: 10px;
        text-align: center;
        text-decoration: none !important;
        display: inline-block;
        font-size: 16px;
        margin: 2px 2px;
        cursor: pointer;
        border-radius: 12px;
      }
      .button1 {
        background-color: #e96269; 
        border: none;
        color: white;
        padding: 10px;
        text-align: center;
        text-decoration: none !important;
        display: inline-block;
        font-size: 16px;
        margin: 2px 2px;
        cursor: pointer;
        border-radius: 12px;
      }
    </style>
  </head>
  <body>
    <div>
      <div style="margin: 0 0 0 1250px">
        <% if(currentUser){ %>
        <button class="button">
          <a href="#">Signed in as <%= currentUser.username %></a>
        </button>

        <% } %>
        <button class="button1">
          <a style="padding: 20px" href="/logout">Logout</a>
        </button>
      </div>

      <% datas.forEach(function(data){ %>
      <div style="border: 3px solid green; margin: 20px">
        <table>
          <thead>
            <tr>
              <th>Id</th>
              <th>User ID</th>
              <th>Body</th>
              <th>Title</th>
            </tr>
          </thead>
          <tbody>
            <% JSON.parse(data.jsondata).forEach(function(conv){ %>

            <tr>
              <td><%=conv.id %></td>
              <td><%=conv.userId %></td>
              <td><%=conv.body %></td>
              <td><%=conv.title %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% }) %>
    </div>
  </body>
</html>
